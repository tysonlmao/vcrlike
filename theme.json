{
    "$schema": "https://schemas.wp.org/wp/6.2/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "color": "#012B5B",
                    "name": "Background",
                    "slug": "background"
                },
                {
                    "color": "#55C5B5",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#FFD0D0",
                    "name": "Secondary",
                    "slug": "secondary"
                },
                {
                    "color": "#C1ECE4",
                    "name": "Tertiary",
                    "slug": "tertiary"
                }
            ]
        },
        "layout": {
            "contentSize": "960px",
            "wideSize": "1280px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Quinquefive",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./assets/fonts/quinquefive/QuinqueFive.ttf"
                            ]
                        }
                    ],
                    "fontFamily": "\"Quinquefive\"",
                    "name": "QuinqueFive",
                    "slug": "quinquefive"
                },
                {
                    "fontFace": [
                        {
                            "fontFamily": "Roboto Mono",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./assets/fonts/roboto_mono/roboto_mono.woff2"
                            ]
                        }
                    ],
                    "fontFamily": "\"Roboto Mono\"",
                    "name": "Roboto Mono",
                    "slug": "roboto-mono"
                },
                {
                    "fontFace": [
                        {
                            "fontFamily": "Lora",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./assets/fonts/lora/Lora-VariableFont_wght.ttf"
                            ]
                        }
                    ],
                    "fontFamily": "\"Lora\"",
                    "name": "Lora",
                    "slug": "lora"
                }
            ]
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "2rem",
            "padding": {
                "top": "1rem",
                "bottom": "1rem",
                "left": "1rem",
                "right": "1rem"
            }
        },
        "color": {
            "background": "var:preset|color|background",
            "text": "var:preset|color|primary"
        },
        "elements": {
            "button": {
                "color": {
                    "background": "var:preset|color|tertiary",
                    "text": "var:preset|color|primary"
                }
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--lora)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontStyle": "normal",
                    "fontWeight": "700"
                }
            },
            "heading": {
                "color": {
                    "text": "var:preset|color|secondary"
                },
                "typography": {
                    "fontFamily": "var:preset|font-family|roboto-mono"
                }
            },
            "link": {
                "typography": {
                    "fontFamily": "var:preset|font-family|roboto-mono",
                    "textDecoration": "none"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--roboto-mono)"
        }
    }
}